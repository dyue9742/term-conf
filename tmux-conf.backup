set -g @tpm_plugins '					\
	tmux-plugins/tpm					\
	tmux-plugins/tmux-copycat			\
	tmux-plugins/tmux-pain-control		\
	tmux-plugins/tmux-prefix-highlight	\
	tmux-plugins/tmux-sensible			\
	tmux-plugins/tmux-sidebar			\
'


bind | split-window -h -c "#{pane_current_path}"
bind - split-window -v -c "#{pane_current_path}"
unbind r
bind r source-file ~/.tmux.conf \; display "Reloaded."

bind -n C-h select-pane -L
bind -n C-j select-pane -D
bind -n C-k select-pane -U
bind -n C-l select-pane -R
bind -r H resize-pane -L 5
bind -r J resize-pane -D 5
bind -r K resize-pane -U 5
bind -r L resize-pane -R 5

set-environment -g PATH "/usr/local/bin:/bin/:/usr/bin"
set-environment -g TMUX_PLUGIN_MANAGER_PATH "~/.tmux/plugins/"
set -g default-shell /usr/local/bin/fish
set -g default-terminal "screen-256color"
set -ga terminal-overrides ",alacritty:Tc"
set -g renumber-windows on
set -g mouse on

set -g status-style fg=white,bg=colour235
set -g message-style fg=white,bold,bg=green
set -g window-status-style fg=cyan,bg=colour235
set -g window-status-current-style fg=white,bold,bg=red
set -g pane-border-style fg=colour240,bg=black
set -g pane-active-border-style fg=green,bg=black
setw -g window-style fg=colour240,bg=colour235
setw -g window-active-style fg=white,bg=black

set -g status-interval 2
set -g status-left-length 50
set -g status-left "#[fg=colour210,bright]««\
										#[fg=colour166,bright] ƒ‹•› \
										#[fg=colour210,bright]»»\
										#[default]\
									 "
set -g status-right-length 100
set -g status-right "#{prefix_highlight}\
										 #[fg=colour210,bright]««\
										 #[fg=yellow,bright]#(whoami)\
										 #[fg=colour15,bright]@\
										 #[fg=colour153,bright]#H\
										 #[fg=colour15,bright]§\
										 #[fg=colour86,bright]%a %d %b %R\
										 #[fg=colour210,bright]»»\
										"
# Initialize
run '~/.tmux/plugins/tpm/tpm'
