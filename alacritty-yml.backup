window:
  dimensions:
    columns: 120
    lines: 50
  padding:
    x: 0
    y: 0
  dynamic_padding: true
  decorations: full

font:
  normal:
    family: 'FiraCode Nerd Font'
    style: Regular
  bold:
    family: 'FiraCode Nerd Font'
    style: Bold
  italic:
    family: 'FiraCode Nerd Font'
    style: Italic
  bold_italic:
    family: 'FiraCode Nerd Font'
    style: Bold Italic
  size: 17.0

shell:
  program: /usr/local/bin/tmux

alt_send_esc: false
